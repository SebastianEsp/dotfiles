{
    // Icons from nerdfonts and fontawsome
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    // "height": 30, // Waybar height (to be removed for auto height)
    "margin": "20 20 0 20",
    // "width": 1280, // Waybar width
    // Choose the order of the modules
    "modules-left": ["hyprland/workspaces", "load", "memory", "disk", "temperature"],
    "modules-center": ["clock"],
    "modules-right": ["mpris", "wireplumber", "bluetooth", "tray"],
    "output": "DP-1",


    //***************************
    //*  Modules configuration  *
    //***************************

    "hyprland/workspaces": {
        "disable-scroll": true,
        "persistent_workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
        },
        "format": "{icon} {windows}  |",
        "format-window-separator": "  ",
        "window-rewrite-default": "ÔÅô",
        "window-rewrite": {
            "title<.*youtube.*>": "ÔÖ™", // Windows whose titles contain "youtube"
            "class<firefox>": "Ôâ©", // Windows whose classes are "firefox"
            "class<firefox> title<.*github.*>": "ÔÑì", // Windows whose class is "firefox" and title contains "github". Note that "class" always comes first.
            "foot": "Óûï", // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
            "code": "Û∞®û",
            "kitty": "ÔÑ°",
            "class<steam>": "Ó¥©",
            "class<steam_app_.*>": "Û∞ä¥",
            "title<Battle.net>": "Óæî"
            },
    },

    "keyboard-state": {
        //"numlock": true,
        "capslock": true,
        "format": "{name} {icon} ",
        "format-icons": {
            "locked": "ÔÄ£ ",
            "unlocked": "ÔÇú"
        },
    },

    "load": {
        "interval": 10,
        "format": "Ôíº  {load1}  /",
        "max-length": 10
    },

    "memory": {
        "interval": 30,
        "format": "ÓøÖ  {used:0.1f}G/{total:0.1f}G  /",
        "max-length": 20
    },

    "disk": {
        "interval": 30,
        "unit": "GB",
        "format": "Û∞ãä {specific_free:0.2f}/{specific_total:0.2f} GB",
        "path": "/"
    },

    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%a, %d %b, %I:%M %p}"
    },

    "mpris": {
        "format": "DEFAULT: {player_icon} {dynamic}",
        "format-paused": "DEFAULT: {status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "ignored-players": ["firefox"]
    },

    "bluetooth": {
        "on-click": "hyprctl dispatch exec [float] overskride"
    },

    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "...ÔÄ¶",
        "on-click": "hyprctl dispatch exec [float] pwvucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },

    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôãã", "Ôãä", "Ôãâ", "Ôãà", "Ôãá"],
        "tooltip": false,
    },

    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
}
